{
  "development": {
    "dialect": "postgres",
    "use_env_variable": "DATABASE_URL",
		"pool": {
			"acquire": 60000,
			"max": 15,
			"min": 0,
			"idle": 10000
		}
  },
  "test": {
    "dialect": "postgres",
    "use_env_variable": "DATABASE_URL"
  },
  "production": {
    "dialect": "postgres",
    "use_env_variable": "DATABASE_URL",
    "logging": true,
    "ssl": false,
    "dialectOptions": {
      "ssl": false
    },
    "pool": {
			"max": 15,
			"min": 0,
			"idle": 10000
    }
  },
	"production-migrate": {
		"dialect": "postgres",
		"use_env_variable": "PG_DATABASE_URL",
		"ssl": false,
		"dialectOptions": {
			"ssl": false
		},
		"pool": {
			"max": 15,
			"min": 0,
			"idle": 10000
		}
	}
}
