#!/usr/bin/env node
require('dotenv').config();
const throng = require('throng');

require('newrelic');
require('../src/config/sentry').initializeSentry();

const worker = require('../src/worker');

const throngWorkers = Number(process.env.WEB_CONCURRENCY || 1);

if (throngWorkers === 1) {
  worker.start();
} else {
  throng({
    workers: throngWorkers,
    lifetime: Infinity,
  }, worker.start);
}
