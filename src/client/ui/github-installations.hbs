<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="ap-local-base-url" content="{{localBaseUrl}}">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/public/primer/build.css" media="all" />
  <script src="/public/js/jquery.min.js" nonce="{{nonce}}"></script>
</head>
<body class="bg-gray px-3 py-6">
  <input type="hidden" id="_csrf" name="_csrf" value="{{csrfToken}}">
  <section class="mx-auto" style="max-width: 510px">
    <p class="text-gray text-center my-4">
      <img src="/public/octicons/mark-github.svg" height="45px;" />
    </p>
    <h2 class="f2 text-center text-normal">Manage Jira Subscriptions</h2>
    <p class="text-gray text-center mb-4">Which installation do you want to manage?</p>
    <div class="Box box-shadow">
      <div class="">
        {{#each installations}}
        <a href="/github/subscriptions/{{ id }}" class="Box-row Box-row--hover-gray muted-link d-block clearfix">
          <img class="avatar float-left mr-2" data-installation-id="{{ id }}" src="{{ account.avatar_url }}" alt=""
            height="25px" width="25px">
          <span class="text-bold text-gray-dark" data-installation-id="{{ id }}">{{ account.login }}</span>
        </a>
        {{/each}}
      </div>
    </div>

  </section>
  <script src="/public/js/github-configuration.js" nonce="{{nonce}}"></script>
</body>

</html>
