<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="ap-local-base-url" content="{{localBaseUrl}}" />
    <title>Setup</title>
    <script src="/public/js/jquery.min.js" nonce="{{nonce}}"></script>
    <link rel="stylesheet" href="/public/primer/build.css" media="all" />
    <link
      rel="stylesheet"
      href="/public/aui/aui-prototyping.css"
      integrity="DTM1Q+8lU7SzJT+FWr0JFisCSZlwfM0GiAKYy7h1s9vIKa/CIh37s9NuOCqIOgK4tmqrjLK4NuWuIPUQNsikHA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/public/css/github-setup.css" media="all" />
    <link rel="stylesheet" href="/public/css/global.css" media="all" />
  </head>

  <body class="pageContent">
    <section class="gitHubSetup__getJira__container">
      <p class="gitHubSetup__getJira__message">Don't have a Jira site?</p>
      <a
        class="gitHubSetup__getJira__link"
        href="https://www.atlassian.com/software/jira"
        target="_blank"
      >Get Jira</a>
    </section>

    <div class="headerImage">
      <img
        src="/public/assets/jira-and-github.png"
        alt="Jira and GitHub logos"
      />
    </div>

    <h2 class="f2 text-center text-normal gitHubSetup__header">Jira Cloud
      configuration</h2>
    {{#if jiraHost}}
    <p class="text-center text-normal gitHubSetup__subHeader">Which site would
      you like to connect?</p>
    {{/if}}

    <section class="githubSetup__newJiraSiteModal" id="new-jira-site-modal">
      <div class="githubSetup__newJiraSiteModalContent">
        <form
          class="githubSetup__form aui"
          method="post"
          action="/github/setup"
          id="jira-instance-form"
        >
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />

          <div class="githubSetup__form__fieldGroup">
            <label class="githubSetup__inputLabel" for="jiraSubdomain">What is
              your Jira Cloud site?</label>
            <div class="githubSetup__form__inputContainer">
              <input
                class="githubSetup__form__input text"
                type="text"
                id="jiraSubdomain"
                name="jiraSubdomain"
                placeholder="Jira Cloud site"
                aria-label="Jira Cloud Site"
                value="{{jiraSubdomain}}"
                autofocus
              />
              <span class="githubSetup__form__jiraSiteSuffix">
                .atlassian.net
              </span>
            </div>
          </div>

          <button class="aui-button" id="modal-close" type="button">
            Cancel
          </button>
          <button
            class="githubSetup__form__submitBtn aui-button aui-button-primary"
            type="submit"
            aria-disabled="true"
            disabled
          >
            Continue
          </button>

          {{#if error}}
            <div class="flash flash-error mb-2">
              {{error}}
            </div>
          {{/if}}
        </form>

      </div>

      <div class="githubSetup__newJiraSiteModalOverlay"></div>
    </section>

    <section class="githubSetup__container">
      {{#if jiraHost}}
        <div class="githubSetup__jiraHostWrapper">
          <div class="githubSetup__headerWrapper">
            <p class="tableHeader__label org__cell">Jira site</p>
          </div>

          <div class="githubSetup__table">
            <div class="githubSetup__table__row clearfix">
              <div class="org__cell">
                {{!-- <img
                    class="getConfiguration__orgContent__avatar"
                    src="{{account.avatar_url}}"
                    alt="Github organization avatar"
                  /> --}}
                <a
                  class="githubSetup__marketplaceUrl"
                  href={{marketplaceUrl}}
                >
                  {{jiraHost}}</a>
              </div>
            </div>
          </div>

          <div
            class="githubSetup__connectNewJiraInstance connect-new-instance"
            id="new-jira-site-modal-btn"
          >
            <span class="githubSetup__connectNewJiraInstance__plus">+</span>
            Connect another Jira Cloud site
          </div>
        </div>
      {{else}}
        <form
          class="githubSetup__form aui"
          method="post"
          action="/github/setup"
          id="jira-instance-form"
        >
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />

          <div class="githubSetup__form__fieldGroup">
            <label class="githubSetup__inputLabel" for="jiraSubdomain">What is
              your Jira Cloud site?</label>
            <div class="githubSetup__form__inputContainer">
              <input
                class="githubSetup__form__input text"
                type="text"
                id="jiraSubdomain"
                name="jiraSubdomain"
                placeholder="Jira Cloud site"
                aria-label="Jira Cloud Site"
                value="{{jiraSubdomain}}"
                autofocus
              />
              <span class="githubSetup__form__jiraSiteSuffix">
                .atlassian.net
              </span>
            </div>
          </div>

          <button
            class="githubSetup__form__submitBtn aui-button aui-button-primary"
            type="submit"
          >
            Continue
          </button>

          {{#if error}}
            <div class="flash flash-error mb-2">
              {{error}}
            </div>
          {{/if}}
        </form>
      {{/if}}

    </section>

    <script src="/public/js/github-setup.js" nonce="{{nonce}}"></script>
  </body>

</html>
